<h1> MAKE A COCKTAIL.<br>GO DRUNK </h1>

<% @cocktails.each do |cocktail| %>
  <div class="card" style="">
    <div class="card-category">Cocktails</div>
      <div class="card-description">
        <h2><%= cocktail.name %></h2>
        <p>I can get you drunk indeed.</p>
      </div>
    <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
    <a class="card-link" <%= link_to cocktail.name, cocktail_path(cocktail) %></a>
  </div>
<% end %>
